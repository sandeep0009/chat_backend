{
  "compilerOptions": {
    "target": "ES6",                      
    "module": "commonjs",                
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "baseUrl": "./",                     
    "resolveJsonModule": true,           
    "moduleResolution": "node"           
  },
  "include": [
    "src/**/*.ts"                        
  ],
  "exclude": [
    "node_modules"                      
  ]
}
